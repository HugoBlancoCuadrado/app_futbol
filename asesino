package herencia;

/**
 *
 * @author Adrian
 */
public class Asesino extends Delincuente {

    private int muertos;

    public Asesino(String nombre) {
        super(nombre);
    }

    public void condenar(int aniosCarcel, int muertos) {
        Delincuente de = (Delincuente) this;
        de.aniadirAniosCarcel(aniosCarcel);
        this.muertos += muertos;
    }

    public int getMuertos() {
        return muertos;
    }

}
